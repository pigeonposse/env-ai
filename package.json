	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"+": "run() { pnpm -F @*/\"${@:1}\"; }; run $@",
		"++": "pnpm -F $@",
		".": "dovenv",
		"..": "dovenv x",
		"build": "pnpm --parallel build",
		"core": "pnpm --filter env-ai $@",
		"lint": "pnpm --parallel /^lint/",
		"test": "pnpm --parallel test"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.1",
		"@dovenv/core": "1.4.7",
