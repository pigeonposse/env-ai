{
  "name": "env-ai",
  "version": "0.2.2",
  "description": "AI Assistant for Your Local Environment",
  "license": "GPL-3.0",
  "keywords": [
    "ai",
    "dev",
    "env",
    "enviroment",
    "artificial-intelligence",
    "documentation",
    "refactor",
    "fix",
    "node",
    "deno",
    "bun"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/main.mjs",
  "types": "./dist/main.d.ts",
  "bin": {
    "env-ai": "dist/cli.mjs"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@8.15.9",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.10.0"
  },
  "homepage": "https://github.com/pigeonposse/env-ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/pigeonposse/env-ai"
  },
  "funding": {
    "type": "individual",
    "url": "https://pigeonposse.com/?popup=donate"
  },
  "bugs": {
    "url": "https://github.com/pigeonposse/env-ai/issues",
    "email": "dev@pigeonposse.com"
  },
  "author": {
    "name": "Angelo",
    "email": "angelo@pigeonposse.com",
    "url": "https://github.com/angelespejo"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "dev:deno": "deno run -A --unstable-sloppy-imports src/cli.ts $@",
    "dev:bun": "bun src/cli.ts",
    "build": "pnpm build:lib && pnpm build:bin",
    "build:lib": "unbuild",
    "build:bin": "binarium --input=src/bin --name=env-ai",
    "preview": "node dist/cli.mjs",
    "preview:deno": "deno run -A --unstable-fs dist/cli.mjs",
    "preview:bun": "bun dist/cli.mjs",
    "test": "vitest src",
    "example-cli": "tsx examples/cli.ts",
    "example-lib": "tsx examples/lib.ts",
    "update-version": "changeset && changeset version",
    "push": "git add . && cz && git push -f origin $@"
  },
  "dependencies": {
    "@clack/prompts": "0.7.0",
    "globby": "14.0.2",
    "ollama": "0.5.9",
    "picocolors": "1.1.0",
    "sanitize-html": "2.13.1",
    "toml": "3.0.0",
    "update-notifier": "7.3.1",
    "yaml": "2.6.0",
    "yargs": "17.7.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.9",
    "@commitlint/cli": "19.5.0",
    "commitizen": "4.3.1",
    "commitlint-config-gitmoji": "2.3.1",
    "cz-customizable": "7.2.1",
    "cz-emoji": "1.3.2-canary.2",
    "@eslint/js": "9.12.0",
    "@stylistic/eslint-plugin": "2.9.0",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.7.5",
    "@types/sanitize-html": "2.13.0",
    "@types/update-notifier": "6.0.8",
    "@types/yargs": "17.0.33",
    "binarium": "0.1.6",
    "eslint": "9.12.0",
    "ts-node": "10.9.2",
    "tsx": "4.19.1",
    "typescript": "5.6.3",
    "typescript-eslint": "8.9.0",
    "unbuild": "2.0.0",
    "vitest": "2.1.3"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".dev/cz-config.cjs"
    }
  },
  "extra": {
    "id": "personality",
    "productName": "Personality",
    "scopes": [
      {
        "name": "core"
      },
      {
        "name": "env"
      },
      {
        "name": "all"
      }
    ]
  }
}